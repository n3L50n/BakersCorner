<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ingredients_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.node_coyote.bakerscorner.ingredients.IngredientsFragment">

    <ImageButton
        android:id="@+id/play_video_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/recipe_image_circle"
        android:contentDescription="@string/ingredient_image_content_description" />

    <ListView
        android:id="@+id/ingredients_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</FrameLayout>