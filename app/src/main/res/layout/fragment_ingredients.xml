<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ingredients_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.node_coyote.bakerscorner.ingredients.IngredientsFragment">

    <ImageButton
        android:id="@+id/ingredients_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:background="@drawable/ingredients"
        android:contentDescription="@string/ingredient_image_content_description" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ingredients_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>