<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:id="@+id/ingredient_widget"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin">

    <TextView
        android:id="@+id/widget_recipe_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/widget_margin"
        android:layout_margin="@dimen/widget_recipe_name_padding"
        android:text="@string/ingredients_title"
        android:textColor="@color/widget_recipe_name_text_color"
        android:textSize="@dimen/widget_recipe_name_text_size"/>

    <ListView
        android:id="@+id/widget_ingredients_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>