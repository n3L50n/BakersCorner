<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recipe_item_container"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="16dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/servings_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="16dp"
        android:text="@string/recipe_servings_text" />

    <ImageView
        android:id="@+id/recipe_image_view"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_margin="16dp"
        android:contentDescription="@string/recipe_image_content_description"
        android:src="@drawable/bakers_corner_logo" />

    <TextView
        android:id="@+id/recipe_title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="8dp"
        android:textColor="@android:color/black"
        android:textSize="26sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="bottom|end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ingredient_image_view"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/ingredients" />
            <TextView
                android:id="@+id/ingredients_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@color/transparent"
                android:text="@string/recipe_ingredients_button_text" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/steps_image_view"
                android:layout_width="50dp"
                android:layout_height="75dp"
                android:background="@drawable/steps" />

            <TextView
                android:id="@+id/steps_view"
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/steps_title" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>